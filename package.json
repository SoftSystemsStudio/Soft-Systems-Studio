{
  "name": "soft-systems-studio",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.11.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "pnpm -w install && pnpm -w -r build",
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm -w -r build",
    "start": "pnpm --filter api start",
    "lint": "pnpm -w -r lint",
    "test": "pnpm -w -r test"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
