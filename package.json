{
  "name": "soft-systems-studio",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.11.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "pnpm -w install && pnpm -w -r build",
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm -w -r build",
    "start": "pnpm --filter api start",
    "lint": "pnpm -w -r lint",
    "test": "pnpm -w -r test",
    "sync-env": "node scripts/sync-env.js",
    "check-env-committed": "node scripts/check-env-committed.js",
    "scan-placeholders": "node scripts/scan-placeholders.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.0"
  }
}
