{
  "name": "apps-agent-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/src/index.js",
    "build": "npx prisma@6 generate && tsc -p tsconfig.json && cp -R prisma ./dist/prisma",
    "worker": "ts-node --transpile-only src/worker/ingestWorker.ts",
    "metrics": "ts-node --transpile-only src/metrics.ts",
    "prisma:generate": "npx prisma@6 generate",
    "migrate:dev": "npx prisma@6 migrate dev --name init",
    "migrate:deploy": "npx prisma@6 migrate deploy",
    "migrate:staging": "NODE_ENV=staging npx prisma@6 migrate deploy",
    "migrate:production": "NODE_ENV=production npx prisma@6 migrate deploy",
    "seed": "ts-node prisma/seed.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:integration": "NODE_ENV=test jest tests/integration --runInBand",
    "typecheck": "tsc --noEmit",
    "deploy:staging": "pnpm build && pnpm migrate:staging",
    "deploy:production": "pnpm build && pnpm migrate:production",
    "health:check": "curl -f http://localhost:${PORT:-5000}/health || exit 1"
  },
  "bin": {},
  "dependencies": {
    "@prisma/client": "6.8.0",
    "@sentry/node": "^10.28.0",
    "@softsystems/agent-customer-service": "workspace:^",
    "@softsystems/core-llm": "workspace:^",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "bullmq": "^5.65.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "2",
    "pg": "^8.11.3",
    "pino": "^8.16.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^14.0.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express-serve-static-core": "^4.19.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-fetch": "2",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.12",
    "dotenv": "^16.3.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.0.0",
    "prisma": "6.8.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
