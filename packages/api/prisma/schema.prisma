generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Client {
  id          String   @id @default(uuid())
  companyName String
  website     String?
  industry    String?
  size        String?
  contactName String?
  contactEmail String?
  contactPhone String?
  // One-to-one relationship to ClientConfig
  config      ClientConfig?
  // Intake submissions (raw form JSON)
  intakes     IntakeSubmission[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model IntakeSubmission {
  id        String   @id @default(uuid())
  clientId  String?
  client    Client?  @relation(fields: [clientId], references: [id])
  raw       Json
  createdAt DateTime @default(now())
}

model ClientConfig {
  id        String   @id @default(uuid())
  clientId  String   @unique
  client    Client   @relation(fields: [clientId], references: [id])
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
